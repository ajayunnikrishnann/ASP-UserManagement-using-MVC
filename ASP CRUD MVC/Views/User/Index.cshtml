@model IEnumerable<ASP_CRUD_MVC.Models.User>

@{
    ViewBag.Title = "Users List";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title> <!-- Ensure ViewBag.Title is used here -->
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
        }

        h2 {
            text-align: center;
            color: #333;
            margin-top: 20px;
        }

        .container {
            width: 80%;
            margin: 0 auto;
            background-color: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        .table th, .table td {
            border: 1px solid #ddd;
            padding: 12px;
            text-align: left;
        }

        .table th {
            background-color: #007bff;
            color: white;
        }

        .table tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .table tr:hover {
            background-color: #ddd;
        }

        .btn {
            display: inline-table;
            font-weight: 400;
            color: #212529;
            text-align: center;
            vertical-align: middle;
            cursor: pointer;
            background-color: transparent;
            border: 1px solid transparent;
            padding: 0.375rem 0.75rem;
            border-radius: 0.25rem;
            text-decoration: none;
            transition: background-color 0.3s, border-color 0.3s, color 0.3s;
        }

        .btn.edit-btn, .btn.details-btn, .btn.delete-btn {
            min-width: 80px; /* Ensure minimum width */
            padding: 0.375rem 0.75rem; /* Adjust padding for uniform size */
            text-align: center;
            color: #fff; /* White text */
        }

        .btn.edit-btn {
            background-color: #28a745; /* Green */
            border-color: #28a745;
        }

        .btn.edit-btn:hover {
            background-color: #218838;
            border-color: #1e7e34;
        }

        .btn.details-btn {
            background-color: #17a2b8; /* Cyan */
            border-color: #17a2b8;
        }

        .btn.details-btn:hover {
            background-color: #138496;
            border-color: #117a8b;
        }

        .btn.delete-btn {
            background-color: #dc3545; /* Red */
            border-color: #dc3545;
        }

        .btn.delete-btn:hover {
            background-color: #c82333;
            border-color: #bd2130;
        }

        .btn.create-btn {
            background-color: deepskyblue; /* Blue */
            border-color: black;
        }

        .btn.create-btn:hover {
            background-color: cornflowerblue;
            border-color: #004085;
        }

        .btn.btn-primary {
            background-color: forestgreen; /* Green */
            border-color: black;
        }

        .btn.btn-primary:hover {
            background-color: #218838;
            border-color: #1e7e34;
        }

        .action-links a {
            color: #007bff;
            text-decoration: none;
            margin-right: 10px; /* Add margin between action links */
        }

        .action-links a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>@ViewBag.Title</h2> <!-- Display ViewBag.Title here -->
    
        <p>
            @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
        </p>
    
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LastName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Phone)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Password)
                    </th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Phone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Password)
                        </td>
                        <td class="action-links">
                            @Html.ActionLink("Edit", "Edit", new { id = item.UserID }, new { @class = "btn edit-btn" }) 
                            @Html.ActionLink("Details", "Details", new { id = item.UserID }, new { @class = "btn details-btn" }) 
                            @Html.ActionLink("Delete", "Delete", new { id = item.UserID }, new { @class = "btn delete-btn", onclick = "return confirm('Are you sure you want to delete this user?');" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
